  <select id="findAll" resultMap="noticeMap">
    select
      ntcno,
      title,
      cdt
    from 
      notice
    order by 
      cdt desc
  </select>

  <!-- 페이징 -->
  <select id="findAllList" resultMap="noticeMap" parameterType="criteria">
    select
      ntcno,
      title,
      cdt
      from
      notice
    order by
      ntcno desc
    limit #{pageStart}, #{perPageNum}
  </select>

  <!-- 페이징을 위해 게시글 개수 조회 -->
  <select id="findAllCount" resultType="Integer">
    select
      count(*)
    from
      notice
  </select>

  <select id="findByNo" resultMap="noticeMap">
    select
      ntcno,
      title,
			cont,
			cdt,
			vw_cnt
    from 
      notice
    where 
      ntcno=#{value}      
  </select>
  
  <insert id="insert" parameterType="notice" 
          useGeneratedKeys="true" keyColumn="ntcno" keyProperty="no">
    insert into notice(title,cont,vw_cnt)
    values(#{title},#{content},0)
  </insert>


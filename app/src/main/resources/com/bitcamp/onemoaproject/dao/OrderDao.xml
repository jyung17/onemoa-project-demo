<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.onemoaproject.dao.OrderDao">

  <resultMap type="order" id="orderMap">
    <id column="pono" property="no"/>
    <result column="cdt" property="createdDate"/>
    <result column="status" property="status"/>
    <result column="pstno" property="postNo"/>
    <result column="base_addr" property="baseAddr"/>
    <result column="detail_addr" property="detailAddr"/>

    <association property="buyer" javaType="member">
      <id column="mno" property="no"/>
    </association>

    <association property="product" javaType="product">
      <id column="pno" property="no"/>
      <result column="title" property="title"/>
      <result column="price" property="price"/>
      <result column="thumbnail" property="thumbnail"/>
    </association>

  </resultMap>

  <select id="findAll" resultMap="orderMap">
    select
      o.pono,
      o.pno,
      o.status,
      o.cdt,
      p.title
    from
      product_order o
      join product p on o.pno=p.pno
  </select>

  <select id="findBySellerNo" resultMap="orderMap">
    select
      o.pono,
      o.pno,
      o.status,
      o.cdt,
      p.title,
      p.mno
    from
      product_order o
      join product p on o.pno=p.pno
    where
      o.mno=#{value}
  </select>

  <select id="findByBuyerNo" resultMap="orderMap">
    select
      o.pono,
      o.pno,
      o.status,
      o.cdt,
      p.title,
      p.mno
    from
      product_order o
      join product p on o.pno=p.pno
    where
      p.mno=#{value}
  </select>

  <select id="findByNo" resultMap="orderMap">
    select
      o.pono,
      o.pno,
      o.status,
      o.cdt,
      p.title,
      p.price,
      p.thumbnail
    from
      product_order o
      join product p on o.pno=p.pno
    where o.pono=#{value}
  </select>

  <insert id="insert" parameterType="order"
          useGeneratedKeys="true" keyColumn="pono" keyProperty="no">
      insert into product_order(mno, pno, pstno, base_addr, detail_addr)
      values(#{buyer.no}, #{product.no}, #{postNo}, #{baseAddr}, #{detailAddr})
  </insert>
  <!-- -->

<!--  <update id="update" >-->

<!--  </update>-->

  <delete id="delete">
    delete
    from product_order
    where pono=#{value}
  </delete>

</mapper>